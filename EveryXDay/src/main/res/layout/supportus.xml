<?xml version="1.0" encoding="utf-8"?>
<com.gc.materialdesign.views.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="@color/white"
        android:id="@+id/parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_gravity="center_horizontal"
            android:text="感    谢"
            android:textSize="18sp"
            android:textColor="@color/ac_title_color"
            android:textStyle="bold"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5d5d5"
            android:layout_marginTop="8dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_centerVertical="true"
                android:text="梦 想 总 是 遥 不 可 及，是 不 是 应 该 放 弃，您 的 支 持 会 让 有 梦 想 的 年 轻 人 更 加 坚 定，会 让 NEW 变 的 更 好。非 常 感 谢 您 对 NEW 的 支 持！"
                android:textSize="14sp"
                android:textColor="@color/ac_title_color"
                android:lineSpacingMultiplier="1.5"
                />
        </RelativeLayout>

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@color/app_main_theme_color"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:text="    支持￥1    " />

    </LinearLayout>

</com.gc.materialdesign.views.ScrollView>
