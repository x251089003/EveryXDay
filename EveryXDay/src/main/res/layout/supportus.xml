<?xml version="1.0" encoding="utf-8"?>
<com.gc.materialdesign.views.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="@color/white"
        android:id="@+id/parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="44dp"
            android:text="支持￥1"
            android:textSize="16sp"
            android:textColor="@color/ac_title_color"
            fontPath="fonts/FZLanTingHeiS-DB1-GB-Regular.TTF"
            tools:ignore="MissingPrefix"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#d5d5d5"
            android:layout_marginTop="8dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="无私地支持"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/ac_title_color"
                android:id="@+id/textView_one" />

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/button_one"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:background="@color/app_main_theme_color"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="    支持￥1    "
                fontPath="fonts/FZLanTingHeiS-L-GB-Regular.TTF"
                tools:ignore="MissingPrefix"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ececec" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="44dp"
            android:text="支持￥10"
            android:textSize="16sp"
            android:textColor="@color/ac_title_color"
            fontPath="fonts/FZLanTingHeiS-DB1-GB-Regular.TTF"
            tools:ignore="MissingPrefix"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#d5d5d5"
            android:layout_marginTop="8dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="获得NEW送出的卡片"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/ac_title_color"
                android:id="@+id/textView_ten" />

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/button_ten"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:background="@color/app_main_theme_color"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="    支持￥10    " />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ececec" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="44dp"
            android:text="支持￥100"
            android:textSize="16sp"
            android:textColor="@color/ac_title_color"
            fontPath="fonts/FZLanTingHeiS-DB1-GB-Regular.TTF"
            tools:ignore="MissingPrefix"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#d5d5d5"
            android:layout_marginTop="8dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="获得NEW送出的礼物"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/ac_title_color"
                android:id="@+id/textView_bai" />

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/button_bai"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:background="@color/app_main_theme_color"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="    支持￥100    " />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ececec" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="44dp"
            android:text="支持￥1000"
            android:textSize="16sp"
            android:textColor="@color/ac_title_color"
            fontPath="fonts/FZLanTingHeiS-DB1-GB-Regular.TTF"
            tools:ignore="MissingPrefix"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#d5d5d5"
            android:layout_marginTop="8dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="连续12个月获得礼物"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/ac_title_color"
                android:id="@+id/textView_qian" />

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/button_qian"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:background="@color/app_main_theme_color"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="    支持￥1000    " />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ececec" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="56dp"
            android:text="感谢有你"
            android:textSize="18sp"
            android:textColor="@color/ac_title_color"
            fontPath="fonts/FZLanTingHeiS-DB1-GB-Regular.TTF"
            tools:ignore="MissingPrefix"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#d5d5d5"
            android:layout_marginTop="8dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="64dp"
            >
            <com.xinxin.everyxday.widget.AlignTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="\u3000\u3000NEW是一款非盈利性应用，意在帮助大家发现生活中美的东西，您的支持会让有梦想的年轻人更加坚定，会让NEW变的更好。非常感谢您对NEW的支持！"
                android:textSize="14sp"
                android:textColor="@color/ac_title_color"
                android:lineSpacingMultiplier="1.5"
                />
        </RelativeLayout>

    </LinearLayout>

</com.gc.materialdesign.views.ScrollView>
