<?xml version="1.0" encoding="utf-8"?>

    <resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ActionBar" parent="android:Widget.ActionBar">
        <item name="android:height">56dp</item>
        <item name="android:background">@color/app_main_theme_color</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleText</item>
    </style>

    <style name="ActionBar.TitleText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="mySwipeBackLayout">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>


</resources>
